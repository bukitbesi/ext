{
  "manifest_version": 3,
  "name": "Ext",
  "short_name": "Ext",
  "version": "1.0.0",
  "description": "Minimal Chrome extension setup with a simple popup.",
  "action": {
    "default_title": "Ext",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
